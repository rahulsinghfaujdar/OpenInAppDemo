<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGraph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/ivStoreLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/today_clicks"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvLinkName"
            style="@style/linkName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sample link name..."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toEndOf="@+id/ivStoreLogo"
            app:layout_constraintTop_toTopOf="@+id/ivStoreLogo"
            app:layout_constraintEnd_toStartOf="@+id/tvClickCounts"
            />

        <TextView
            android:id="@+id/tvClickCounts"
            style="@style/linkClicksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="223"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvLinkName"
            app:layout_constraintBottom_toBottomOf="@+id/tvLinkName"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvLinkTimeStamp"
            style="@style/linkTimeStamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22 Aug 2022"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="@+id/tvLinkName"
            app:layout_constraintBottom_toBottomOf="@+id/ivStoreLogo"
            app:layout_constraintEnd_toStartOf="@+id/tvClickTitle"
            />

        <TextView
            android:id="@+id/tvClickTitle"
            style="@style/linkTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clicks"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvLinkTimeStamp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLinkTimeStamp"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/viewLinkCopy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/link_copy_bg"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivStoreLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvLink"
            style="@style/link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://samplelink.oia.bio/ashd..."
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@+id/viewLinkCopy"
            app:layout_constraintEnd_toStartOf="@+id/ivLinkCopy"
            app:layout_constraintTop_toTopOf="@+id/viewLinkCopy"
            app:layout_constraintBottom_toBottomOf="@+id/viewLinkCopy"
            />

        <ImageView
            android:id="@+id/ivLinkCopy"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@drawable/copy"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/viewLinkCopy"
            app:layout_constraintTop_toTopOf="@+id/viewLinkCopy"
            app:layout_constraintBottom_toBottomOf="@+id/viewLinkCopy"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>